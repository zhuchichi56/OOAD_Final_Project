<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.PullRequestMapper">
    <insert id="insertPullRequest" parameterType="PullRequest">
        insert into pullRequest values (#{pullRequest.prId}, #{pullRequest.repositoryId}, #{pullRequest.agentName}
        , #{pullRequest.branch}, #{pullRequest.targetId}, #{pullRequest.targetBranch}, #{pullRequest.isClosed}
        , #{pullRequest.title}, #{pullRequest.status})
    </insert>

    <select id="getPullRequestByTarget" resultType="PullRequest">
        select * from pullRequest where targetId = #{targetId};
    </select>

    <delete id="deletePull" parameterType="PullRequest">
        delete from pullRequest where prId = #{pullRequest.prId};
    </delete>

    <update id="updatePull" parameterType="PullRequest">
        update pullRequest set isClosed = #{pullRequest.isClosed},status = #{pullRequest.status}
                           where prId = #{pullRequest.prId};
    </update>
</mapper>


